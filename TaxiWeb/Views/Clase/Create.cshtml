@model TaxiWeb.Models.Clase

@{
    ViewBag.Title = "Crear";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Inscribrir Clase</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        @Html.LabelFor(model => model.IdConductor, "Conductor", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="input-field col s12">
            @Html.DropDownList("IdConductor", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdConductor, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="row">
            <div class="input-field col s12">
                @Html.LabelFor(model => model.FechaClase, "Fecha de Clase", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.FechaClase, new { htmlAttributes = new { @class = "datepicker", type = "text" } })
                @Html.ValidationMessageFor(model => model.FechaClase, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                @Html.LabelFor(model => model.NombreInstructor, "Instructor", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.NombreInstructor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreInstructor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                @Html.LabelFor(model => model.HoraInicio, "Hora de Inicio", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.HoraInicio, new { htmlAttributes = new { @class = "timepicker", type = "text" } })
                @Html.ValidationMessageFor(model => model.HoraInicio, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s6">
                @Html.LabelFor(model => model.HoraFin, "Hora de Fin", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.HoraFin, new { htmlAttributes = new { @class = "timepicker", type = "text" } })
                @Html.ValidationMessageFor(model => model.HoraFin, "", new { @class = "text-danger" })
            </div>
        </div>        

        <div class="row">
            <div class="col-md-offset-2 input-field col s12">
                <input type="submit" value="Crear" class="btn btn-default" /> |
                @Html.ActionLink("Regresar", "Index")
            </div>
        </div>
    </div>
}
