@model TaxiWeb.Models.Conductor

@{
    ViewBag.Title = "Crear";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Nuevo Conductor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="input-field col s6">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s6">
                @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                @Html.LabelFor(model => model.Cedula, "Cédula", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                @Html.LabelFor(model => model.FechaNacimiento, "Fecha de Nacimiento", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "datepicker", type = "text" } })
                @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                @Html.LabelFor(model => model.LicenciaConduccion, "Licencia de Conducción", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.LicenciaConduccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LicenciaConduccion, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s6">
                @Html.LabelFor(model => model.ExpiracionLicencia, "Expiracion de Licencia", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.ExpiracionLicencia, new { htmlAttributes = new { @class = "datepicker", type = "text" } })
                @Html.ValidationMessageFor(model => model.ExpiracionLicencia, "", new { @class = "text-danger" })
            </div>
        </div>        

        <div class="row">
            <div class="col-md-offset-2 input-field col s12">
                <input type="submit" value="Crear" class="btn" /> |
                @Html.ActionLink("Regresar", "Index")
            </div>
        </div>
    </div>
}
